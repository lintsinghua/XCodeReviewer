# Development Environment Configuration
# This file contains settings for local development

# Application
APP_NAME=XCodeReviewer
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database - SQLite for development
DATABASE_URL=sqlite+aiosqlite:///./xcodereviewer_dev.db
# Alternative: Use PostgreSQL for development
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/xcodereviewer_dev

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Security
SECRET_KEY=dev-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]
CORS_ALLOW_CREDENTIALS=true

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_EAGER_PROPAGATES=true

# Storage - Local filesystem for development
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage
# MinIO settings (optional for development)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=xcodereviewer-dev
MINIO_SECURE=false

# LLM Providers - Mock or use real APIs
# Set to 'mock' to use mock responses for testing
LLM_MODE=mock

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-pro

# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=codellama

# Chinese LLM Providers
QWEN_API_KEY=your-qwen-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here
ZHIPU_API_KEY=your-zhipu-api-key-here

# GitHub Integration
GITHUB_TOKEN=your-github-token-here

# GitLab Integration
GITLAB_TOKEN=your-gitlab-token-here
GITLAB_URL=https://gitlab.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=7 days

# Testing
PYTEST_TIMEOUT=300
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_BACKGROUND_TASKS=true
ENABLE_CACHING=true

# Development Tools
ENABLE_SWAGGER=true
ENABLE_REDOC=true
ENABLE_DEBUG_TOOLBAR=false
